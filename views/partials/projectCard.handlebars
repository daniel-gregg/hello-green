<div class="rounded overflow-hidden shadow-lg" href="/brief/{{id}}/edit">
    {{!-- this is the good stuff for getting routes and things --}}
    {{!-- <a href="/brief/{{brief.id}}/edit"></a> --}}
    <img class="w-full" src={{imageUrl}} alt={{imgDescription}}>
    <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">{{title}}</div>
    <p class="text-gray-600">{{date}}</p>
    <p class="text-gray-700 text-base">
        {{shortSummary}}
    </p>
    </div>
    <div class="font-bold text-xl mb-2">
        {{#each authors}}
            {{#if owner}}
                <span class="inline-block bg-gray-300 rounded-md px-3 py-1 text-sm font-bold text-black mr-2 mb-2">{{this.firstName}} {{this.lastName}}</span>
            {{else}}
                <span class="inline-block bg-gray-200 rounded-md px-3 py-1 text-sm font-semi-bold text-gray-600 mr-2 mb-2">{{this.firstName}} {{this.lastName}}</span>
            {{/if}}
        {{/each}}
    </div>
</div>